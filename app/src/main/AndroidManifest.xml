<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.android.senyaar">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".Activities.DashboardRiderActivity"
                android:label="@string/title_activity_dashboard_rider"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".Activities.DashboardPassengerActivity"
                android:label=""
                android:theme="@style/DashboardScreen">
        </activity>
        <activity
                android:name=".Activities.SplashScreen"
                android:screenOrientation="portrait"
                android:theme="@style/NoWindow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".Activities.LoginOptionActivity"
                android:screenOrientation="portrait"
                android:theme="@style/NoWindow"/>
        <activity
                android:name=".Activities.SignUpActivity"
                android:screenOrientation="portrait"
                android:theme="@style/NoWindow"/>
        <activity
                android:name=".Activities.SignInActivity"
                android:screenOrientation="portrait"
                android:theme="@style/NoWindow"/>
        <activity
                android:name=".Activities.ForgetPasswordActivity"
                android:screenOrientation="portrait"
                android:theme="@style/NoWindow"/>
        <activity
                android:name=".Activities.SearchLocation"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".Activities.PassengerInfo"
                android:label=""
                android:screenOrientation="portrait"
                android:theme="@style/NoWindow"/>
        <activity
                android:name=".Activities.RiderReceiptActivity"
                android:label=""
                android:screenOrientation="portrait"
                android:theme="@style/NoWindow"/>
        <activity
                android:name=".Activities.FareCalculationActivity"
                android:label=""
                android:screenOrientation="portrait"
                android:theme="@style/NoWindow"/>
        <activity
                android:name=".Activities.Notifications"
                android:label=""
                android:screenOrientation="portrait"
                android:theme="@style/NoWindow"/>
        <activity
                android:name=".Activities.Settings"
                android:label=""
                android:screenOrientation="portrait"
                android:theme="@style/NoWindow"/>
        <activity
                android:name=".Activities.AccountDetailsActivity"
                android:label=""
                android:screenOrientation="portrait"
                android:theme="@style/NoWindow"/>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>