<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/circle_image"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/circle_filled"
            android:layout_alignParentStart="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            tools:text="Fare Calculation"
            android:layout_toEndOf="@+id/circle_image"
            android:textSize="17sp"
            android:textColor="@color/darkBlue"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/tv_heading_notification"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:layout_alignStart="@+id/tv_heading_notification"
            android:layout_below="@+id/tv_heading_notification"
            tools:text="Fare Calculation mxncxcnxbcnxcbnx cbnxcbnxcbxbxnbxncbxnc"
            android:textSize="15sp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:id="@+id/tv_sub_heading_notification"
            />

    <View
            android:layout_width="match_parent"
            android:background="@color/darkBlue"
            android:layout_below="@+id/tv_sub_heading_notification"
            android:layout_alignStart="@+id/tv_heading_notification"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="20dp"
            android:layout_height="3dp"/>
</RelativeLayout>