<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/darkBlue">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rider_name"
            android:text="Rider 1"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:fontFamily="@font/lato_bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rider_info"
        android:text="Information"
        android:textColor="@color/white"
        android:layout_below="@id/rider_name"
        android:textSize="12sp"
        android:fontFamily="@font/lato_bold"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rating"
            android:text="3"
            android:textColor="@color/white"
            android:layout_below="@id/rider_info"
            android:textSize="12sp"
            android:fontFamily="@font/lato_bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            />
    <RatingBar
            android:id="@+id/ratingBar"
            android:layout_below="@+id/rider_info"
            android:layout_toEndOf="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="2.0"
            android:backgroundTint="@color/green"
            android:progressTint="@color/white"
            android:secondaryProgressTint="@color/white"
            style="?android:attr/ratingBarStyleSmall"/>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="90dp"
            android:layout_below="@+id/rider_info">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_contact"
                android:text="Contact"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_bold"
                />

        <View
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:id="@+id/view"
                android:layout_centerHorizontal="true"
                android:background="@color/light_grey"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/tv_contact"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_book"
                android:layout_toEndOf="@+id/view"
                android:text="Book"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:fontFamily="@font/lato_bold"
                />
    </RelativeLayout>

</RelativeLayout>