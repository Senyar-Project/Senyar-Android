<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/light_blue"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_dashboard_passenger"
        tools:context=".Activities.DashboardPassengerActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/text_welcome"
              android:textColor="@color/darkBlue"
              android:text="Welcome,Passenger"
              android:textSize="20sp"
              android:fontFamily="@font/lato_bold"
              android:layout_marginStart="20dp"
              android:layout_marginTop="10dp"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/text_drivers"
              android:layout_below="@+id/text_welcome"
              android:textColor="@color/black"
              android:text="Let the drivers know your destination"
              android:textSize="16sp"
              android:fontFamily="@font/lato_regular"
              android:layout_marginStart="20dp"
              android:layout_marginTop="10dp"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/text_search_driver"
              android:layout_below="@+id/text_drivers"
              android:textColor="@color/black"
              android:text="Search Driver"
              android:textSize="16sp"
              android:fontFamily="@font/lato_bold"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
    />
</RelativeLayout>