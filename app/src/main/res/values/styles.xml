<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>

    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/darkBlue</item>
    </style>

    <style name="InputLayout">

        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="EditText">
        <item name="android:ems">15</item>
        <item name="android:background">@drawable/input_layout_background</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColorHint">@color/grey_text</item>
    </style>

    <style name="EditText_Profile">
        <item name="android:ems">15</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColorHint">@color/grey_text</item>
        <item name="android:backgroundTint">@color/darkBlue</item>
    </style>
    <style name="Button">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="SplashTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="SplashTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Button_Dashboard">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="NoWindow" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlHighlight">@color/grey_text</item>
        <item name="colorControlNormal">@color/grey_border</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/darkBlue</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>


    </style>
    <style name="PassengerInfo" parent="AppTheme">
        <item name="colorAccent">@color/light_blue</item>
        <item name="colorControlHighlight">@color/light_blue</item>
        <item name="colorControlNormal">@color/light_blue</item>
    </style>

    <style name="DashboardScreen" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/darkBlue</item>
        <item name="colorControlHighlight">@color/light_blue</item>
        <item name="colorControlNormal">@color/darkBlue</item>
    </style>

    <style name="Maps" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/darkBlue</item>
        <item name="colorControlHighlight">@color/light_blue</item>
        <item name="colorControlNormal">@color/darkBlue</item>
    </style>

    <style name="toolbar" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/darkBlue</item>
        <item name="android:statusBarColor">@color/darkBlue</item>
        <item name="android:textColorSecondary">@color/darkBlue</item>
    </style>
    <style name="CheckBoxStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/grey_text</item>
        <item name="android:textColorSecondary">@color/grey_text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
</resources>
